<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/login_navigation"
    app:startDestination="@id/loginFragment">

    <fragment
        android:id="@+id/loginCreateFragment"
        android:name="com.budgety.ui.login.create.LoginCreateFragment"
        android:label="fragment_login_create"
        tools:layout="@layout/fragment_login_create">
        <action
            android:id="@+id/action_loginCreateFragment_to_loginFragment"
            app:destination="@id/loginFragment"
            app:enterAnim="@anim/nav_default_enter_anim" />
    </fragment>
    <fragment
        android:id="@+id/loginFragment"
        android:name="com.budgety.ui.login.login.LoginFragment"
        android:label="fragment_login"
        tools:layout="@layout/fragment_login" >
        <action
            android:id="@+id/action_loginFragment_to_loginCreateFragment"
            app:destination="@id/loginCreateFragment"
            app:enterAnim="@anim/nav_default_enter_anim"
            app:exitAnim="@anim/fragment_fade_exit"
            app:launchSingleTop="false"
            app:popUpTo="@+id/loginFragment" />
    </fragment>
</navigation>